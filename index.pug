doctype
html(lang='pt-br')
  head
    meta(charset='utf-8')
    link(rel="stylesheet", href="style/style.css", attr)
    title Calculadora - Leandro Viana
  body
    header
      p Calculator made with 
        i.fab.fa-js-square(style="color: #F7DF1E;")  
        |  and  
        i.fas.fa-heart(style="color: #ff5555;") 
        |  by 
        a.link-leandro(href="https://leandrocodes.com.br" target="_blank") Leandro Viana
    
    div.calculator
      div.visor
      div.keys
        div.key 7
        div.key 8
        div.key 9
        div.key.operator x
        div.key 4
        div.key 5
        div.key 6
        div.key.operator -
        div.key 1
        div.key 2
        div.key 3
        div.key.operator +
        div.key 0
        div.key .
        div.key =
        div.key.operator %
      
